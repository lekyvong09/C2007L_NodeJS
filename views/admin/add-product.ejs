<body class="d-flex flex-column vh-100">
    <%- include('../includes/navigation.ejs') %> 
    <main class="d-flex flex-grow-1 container flex-column">
        <form action="/admin/product" method="POST" enctype="multipart/form-data" class="w-100 m-auto" style="max-width: 330px;">
            <div class="form-floating mb-3">
                <input type="text" name="title" class="form-control" id="product-title" placeholder="title">
                <label for="product-title">Title</label>
            </div>
            <div class="form-floating mb-3">
                <input type="number" step="0.01" name="price" class="form-control" id="product-price" placeholder="price">
                <label for="product-price">Price</label>
            </div>
            <div class="form-floating mb-3">
                <textarea type="text" name="description" class="form-control" id="product-description" placeholder="description"></textarea>
                <label for="product-description">Description</label>
            </div>

            <input type="file" name="image" class="form-control mb-3" style="line-height: 44px;">

            <button type="submit" class="btn btn-primary w-100">Add Product</button>
        </form>
    </main>

