<%- include('../includes/head.ejs') %> 
    <link rel="stylesheet" href="/css/cart.css">
</head>
    <%- include('../includes/navigation.ejs') %> 
<body class="vh-100 d-flex flex-column">
    <h1 class="m-auto mb-5">cart</h1>
    <main class="flex-grow-1 d-flex container flex-column">
        <ul class="d-flex align-items-center">
            <% for (let item of cartItems) { %>
                <li>
                    <img class="product-image" src="/<%= item.productId.imageUrl %>" alt="">
                    <div class="product-info flex-grow-1">
                        <a href="#" class="product-link"><%= item.productId.title %></a>
                        <p class="product-quantity"><%= item.quantity %></p>
                    </div>
                    <form class="d-flex align-items-center" action="/cart-delete-item" method="post">
                        <input type="hidden" name="productId" value="<%= item.productId._id %>">
                        <button class="btn me-3" type="submit">
                            <i class="fas fa-trash text-danger fa-lg"></i>
                        </button>
                    </form>
                </li>
            <% } %> 
        </ul>
        <form action="/checkout" method="post" class="d-flex align-self-center">
            <button class="btn btn-outline-primary" type="submit">Checkout</button>
        </form>
    </main>
    <%- include('../includes/end.ejs') %> 